{
  "name": "stream-gate",
  "version": "0.0.1",
  "description": "Stream Gate - VPN Client with HTTP Proxy",
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "tsc -p src/start-main/tsconfig.json",
    "start": "npm run build:main && cd src/start-renderer && npm run build && cd ../.. && electron .",
    "dev": "cd src/start-renderer && npm run dev",
    "build:ui": "cd src/start-renderer && npm install && npm run build",
    "postinstall": "cd src/start-renderer && npm install",
    "generate-icons": "node scripts/generate-icons.js && npx electron-icon-builder --input=./assets/icon.png --output=./assets --flatten",
    "download:binaries": "node scripts/download-binaries.js",
    "clean:binaries": "node -e \"const fs=require('fs'); fs.rmSync('binaries',{recursive:true,force:true}); console.log('âœ… Removed ./binaries');\"",
    "verify:binaries": "node scripts/verify-binaries.js --platform all",
    "prebuild:mac": "node scripts/verify-binaries.js --platform mac",
    "build:mac": "npm run build:ui && electron-builder --mac --publish never",
    "prebuild:mac:arm64": "node scripts/verify-binaries.js --platform mac --arch arm64",
    "build:mac:arm64": "npm run build:ui && electron-builder --mac --arm64 --publish never",
    "prebuild:mac:x64": "node scripts/verify-binaries.js --platform mac --arch x64",
    "build:mac:x64": "npm run build:ui && electron-builder --mac --x64 --publish never",
    "prebuild:win": "node scripts/verify-binaries.js --platform win",
    "build:win": "npm run build:ui && electron-builder --win --publish never",
    "prebuild:win:x64": "node scripts/verify-binaries.js --platform win",
    "build:win:x64": "npm run build:ui && electron-builder --win --x64 --publish never",
    "prebuild:win:ia32": "node scripts/verify-binaries.js --platform win",
    "build:win:ia32": "npm run build:ui && electron-builder --win --ia32 --publish never",
    "prebuild:linux": "node scripts/verify-binaries.js --platform linux",
    "build:linux": "npm run build:ui && electron-builder --linux --publish never",
    "prebuild:linux:x64": "node scripts/verify-binaries.js --platform linux",
    "build:linux:x64": "npm run build:ui && electron-builder --linux --x64 --publish never",
    "prebuild:linux:arm64": "node scripts/verify-binaries.js --platform linux",
    "build:linux:arm64": "npm run build:ui && electron-builder --linux --arm64 --publish never",
    "prebuild:all": "node scripts/verify-binaries.js --platform all",
    "build:all": "npm run build:ui && electron-builder --mac --win --linux --publish never"
  },
  "keywords": [
    "vpn",
    "proxy",
    "stream-gate"
  ],
  "author": {
    "name": "Stream Gate Contributors"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/free-mba/Stream-Gate.git"
  },
  "bugs": {
    "url": "https://github.com/free-mba/Stream-Gate.git/issues"
  },
  "homepage": "https://github.com/free-mba/Stream-Gate.git#readme",
  "devDependencies": {
    "@types/http-proxy": "1.17.17",
    "@types/ip": "1.1.3",
    "@types/node": "25.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "2.0.1",
    "sharp": "0.34.5",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "base32-encode": "2.0.0",
    "http-proxy": "1.18.1",
    "ip": "^2.0.1",
    "socks": "^2.7.1",
    "socks-proxy-agent": "^8.0.2"
  },
  "build": {
    "appId": "com.streamgate.gui",
    "productName": "Stream Gate",
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!*.md",
      "!.gitignore",
      "!**/*.md",
      "!**/.gitignore",
      "!settings.json",
      "!**/settings.json"
    ],
    "mac": {
      "extraResources": [
        {
          "from": "binaries/stream-client-mac-arm64",
          "to": "binaries/stream-client-mac-arm64",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "binaries/stream-client-mac-intel",
          "to": "binaries/stream-client-mac-intel",
          "filter": [
            "**/*"
          ]
        }
      ],
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns",
      "extendInfo": {
        "NSHighResolutionCapable": true,
        "CFBundleName": "Stream Gate",
        "CFBundleDisplayName": "Stream Gate",
        "CFBundleExecutable": "Stream Gate"
      },
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "extraResources": [
        {
          "from": "binaries/stream-client-win.exe",
          "to": "binaries/stream-client-win.exe",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network",
      "icon": "assets/icons",
      "maintainer": "Stream Gate Contributors <noreply@github.com>",
      "extraResources": [
        {
          "from": "binaries/stream-client-linux",
          "to": "binaries/stream-client-linux",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}